# PCT-WC-102: Structured environment variables with validation
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3000
APP_NAME=PCT System
APP_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/pct
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis (caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# API Keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
META_APP_ID=
META_APP_SECRET=
META_ACCESS_TOKEN=

# Authentication
JWT_SECRET=your-secret-key-change-this
SESSION_SECRET=your-session-secret-change-this
COOKIE_DOMAIN=localhost

# File Storage
STORAGE_TYPE=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=

# Error Tracking (PCT-WC-103)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Logging (PCT-WC-107)
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring (PCT-WC-108)
MONITORING_ENABLED=true
METRICS_PORT=9090

# Feature Flags (PCT-WC-109)
FEATURE_FLAGS_URL=
FEATURE_FLAGS_API_KEY=

# Email
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cors
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Security
HELMET_ENABLED=true
CSRF_ENABLED=true
