# Staging Environment Configuration (CF-WC-105)
# Copy to .env.staging and fill in actual values

# Environment
NODE_ENV=production
DEPLOYMENT_ENV=staging

# API Configuration
NEXT_PUBLIC_API_URL=https://staging-api.contentfactory.example.com
API_SECRET_KEY=staging-secret-key-min-32-chars-long

# Database - Staging (isolated from production)
DATABASE_URL=postgresql://cf_staging:password@staging-db.example.com:5432/content_factory_staging
DATABASE_POOL_SIZE=5

# Remotion API
REMOTION_API_URL=https://api.remotion.dev
REMOTION_API_KEY=staging-remotion-api-key

# TikTok API - Use sandbox/test accounts
TIKTOK_CLIENT_KEY=staging-tiktok-client-key
TIKTOK_CLIENT_SECRET=staging-tiktok-client-secret
TIKTOK_SANDBOX_MODE=true

# AI Services - Use lower rate limits
OPENAI_API_KEY=sk-staging-openai-key
ANTHROPIC_API_KEY=sk-ant-staging-anthropic-key

# Error Monitoring - Separate Sentry project
SENTRY_DSN=https://staging-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-org
SENTRY_PROJECT=content-factory-staging
SENTRY_ENVIRONMENT=staging

# Feature Flags
NEXT_PUBLIC_FEATURE_FLAGS_URL=https://flags.example.com
FEATURE_FLAGS_API_KEY=staging-flags-api-key
FEATURE_FLAGS_ENVIRONMENT=staging

# Authentication
JWT_SECRET=staging-jwt-secret-min-32-chars-long
SESSION_SECRET=staging-session-secret-min-32-chars-long
AUTH_COOKIE_NAME=cf_session_staging
AUTH_COOKIE_DOMAIN=.staging.contentfactory.example.com

# File Storage - Separate S3 bucket
S3_BUCKET=content-factory-staging
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=staging-access-key
S3_SECRET_ACCESS_KEY=staging-secret-key

# Rate Limiting - More lenient for testing
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=60000

# Logging - More verbose
LOG_LEVEL=debug
LOG_FORMAT=json

# CORS - Staging domains only
CORS_ORIGIN=https://staging.contentfactory.example.com,https://staging-admin.contentfactory.example.com

# Redis - Staging instance
REDIS_URL=redis://staging-redis.example.com:6379

# Email - Use test SMTP
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=staging-smtp-user
SMTP_PASSWORD=staging-smtp-password

# Monitoring
HEALTH_CHECK_PATH=/api/health
METRICS_ENABLED=true

# Testing
ENABLE_TEST_ROUTES=true
ALLOW_UNSAFE_OPERATIONS=true
